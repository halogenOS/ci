#!/bin/bash

reflectorName   "Messaging"
reflectorId     "messaging_init"

function messaging_send_message() {
  if [ ! -f $TOP/config/messaging ]; then
    return 0
  fi
  $MESSAGING_SEND_FUNC "$@"
}

function reflect() {
  if [ ! -f $TOP/config/messaging ]; then
    echo "No messaging config"
    return 0
  fi

  source $TOP/config/messaging
  run $MESSAGING_REFLECTOR
}

